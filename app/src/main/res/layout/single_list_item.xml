<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/list_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_duration"
        app:layout_constraintEnd_toStartOf="@+id/list_classify_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/player_play_btn"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif"
        android:text="Filename"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif"
        android:text="Duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_title" />

    <ImageView
        android:id="@+id/list_delete_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="92dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintTop_toTopOf="@+id/list_classify_btn"
        app:layout_constraintBottom_toBottomOf="@+id/list_classify_btn"
        app:layout_constraintStart_toEndOf="@+id/list_classify_btn"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/list_classify_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Classify"
        app:layout_constraintBottom_toBottomOf="@+id/list_play_btn"
        app:layout_constraintStart_toEndOf="@+id/list_play_btn"
        app:layout_constraintTop_toTopOf="@+id/list_play_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>