<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/audio_list_item_cardview"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="10dp"
    android:descendantFocusability="blocksDescendants"

    >


    <RelativeLayout
        android:id="@+id/relative_layout_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#2196F3">



        <LinearLayout
            android:id="@+id/text_LL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/bird_image"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bird_species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:text="Bird Species"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/time_spotted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:text="time spotted" />

            <TextView
                android:id="@+id/location_spotted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:text="location spotted" />
        </LinearLayout>


        <ImageView
            android:id="@+id/bird_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:background="#2196F3"
            app:srcCompat="@drawable/blue_jay" />



        <Button
            android:id="@+id/tweet_btn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bird_image"
            android:text="Tweet"
            />

        <Button
            android:id="@+id/view_map_btn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bird_image"
            android:layout_centerHorizontal="true"
            android:text="View Map"
            />

        <Button
            android:id="@+id/view_wiki_btn"
            android:layout_alignParentRight="true"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bird_image"

            android:text="View wiki"
            />




    </RelativeLayout>

</androidx.cardview.widget.CardView>
