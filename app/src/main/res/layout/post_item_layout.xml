<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp"
    >

    <TextView
        android:id="@+id/textViewClassName"
        android:layout_width="195dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="BirdClassified: "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewBird"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="141dp"
        android:layout_height="23dp"
        android:layout_marginTop="4dp"
        android:text="Date: MM/DD/YYYY"
        app:layout_constraintStart_toStartOf="@+id/textViewClassName"
        app:layout_constraintTop_toBottomOf="@+id/textViewClassName" />


    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="153dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Location: Street, City, State Zip, Country"
        app:layout_constraintStart_toEndOf="@+id/imageViewBird"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate" />

    <ImageView
        android:id="@+id/imageViewBird"
        android:layout_width="82dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tweeter_bird" />

    <Button
        android:id="@+id/buttonPlaySound"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Listen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBirdWiki"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:text="Wiki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlaySound" />
</androidx.constraintlayout.widget.ConstraintLayout>